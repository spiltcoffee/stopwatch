{
  "name": "vr-stopwatch",
  "productName": "VR Stopwatch",
  "version": "1.0.0",
  "description": "Timer designed specifically for helping run VR sessions",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "web": "webpack --config webpack.web.config.js --progress",
    "web:dev": "webpack-dev-server --config webpack.web.config.js --progress --mode development",
    "lint": "eslint --ignore-path .gitignore \"**/*.{js,vue}\" --fix",
    "format": "prettier --ignore-path .gitignore \"**/*.{js,json,ts,yml,md,html,vue}\" --write --list-different",
    "postinstall": "yarn husky install"
  },
  "keywords": [],
  "author": {
    "name": "SpiltCoffee",
    "email": "spiltcoffee@users.noreply.github.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "appCopyright": "MIT License, copyright SpiltCoffee 2019",
        "icon": "./src/favicon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "VRStopwatch"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "spiltcoffee",
              "name": "stopwatch"
            }
          }
        }
      ],
      "plugins": [
        {
          "name": "@electron-forge/plugin-webpack",
          "config": {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.js",
                  "name": "main_window"
                }
              ]
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fs-jetpack": "^5.1.0",
    "moment": "^2.29.4",
    "process": "^0.11.10",
    "uuid": "^9.0.0",
    "vue": "^3.3.4",
    "vue-svg-gauge": "^1.2.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.2.1",
    "@electron-forge/maker-squirrel": "6.2.1",
    "@electron-forge/plugin-webpack": "6.2.1",
    "@electron-forge/publisher-github": "6.2.1",
    "@fortawesome/fontawesome-free": "^6.4.0",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "autoprefixer": "^10.4.14",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "electron": "25.3.2",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-vue": "^9.15.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "node-loader": "^2.0.0",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.0",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "vue-loader": "^17.2.2",
    "vue-template-compiler": "^2.7.14",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0"
  },
  "lint-staged": {
    "*.{json,yml,md,html,css}": [
      "prettier --ignore-path .gitignore --write"
    ],
    "*.{js,vue}": [
      "eslint --ignore-path .gitignore",
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "packageManager": "yarn@3.6.1"
}
