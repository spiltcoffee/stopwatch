{
  "name": "vr-stopwatch",
  "productName": "VR Stopwatch",
  "version": "1.0.0",
  "description": "Timer designed specifically for helping run VR sessions",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "web": "webpack --config webpack.web.config.js --progress",
    "web:dev": "webpack-dev-server --config webpack.web.config.js --progress --mode development",
    "lint": "eslint --ignore-path .gitignore \"**/*.{js,vue}\"",
    "lint:fix": "yarn lint --fix",
    "lint:check": "yarn lint",
    "format": "prettier --ignore-path .gitignore \"**/*.{js,json,ts,yml,md,html,vue}\"",
    "format:fix": "yarn format --write --list-different",
    "format:check": "yarn format --check",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect",
    "postinstall": "yarn husky install"
  },
  "keywords": [],
  "author": {
    "name": "SpiltCoffee",
    "email": "spiltcoffee@users.noreply.github.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "appCopyright": "MIT License, copyright SpiltCoffee 2019",
        "icon": "./src/favicon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "VRStopwatch"
          }
        }
      ],
      "publishers": [
        {
          "name": "@electron-forge/publisher-github",
          "config": {
            "repository": {
              "owner": "spiltcoffee",
              "name": "stopwatch"
            }
          }
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.js",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "fs-jetpack": "^4.1.0",
    "moment": "^2.29.1",
    "process": "^0.11.10",
    "snyk": "^1.624.0",
    "uuid": "^8.3.2",
    "vue": "^2.6.13",
    "vue-svg-gauge": "^1.2.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "6.0.0-beta.54",
    "@electron-forge/publisher-github": "6.0.0-beta.54",
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "autoprefixer": "^10.2.6",
    "css-loader": "^5.2.5",
    "cssnano": "^5.0.4",
    "electron": "12.0.13",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-vue": "^7.10.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.0",
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "node-loader": "^1.0.3",
    "postcss": "^8.2.14",
    "postcss-loader": "^4.3.0",
    "prettier": "^2.3.1",
    "style-loader": "^2.0.0",
    "tailwindcss": "^2.2.0",
    "vue-loader": "^15.9.7",
    "vue-template-compiler": "^2.6.13",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.0.0-beta.0",
    "webpack-merge": "^5.8.0"
  },
  "lint-staged": {
    "*.{json,yml,md,html,css,vue}": [
      "prettier --ignore-path .gitignore --write"
    ],
    "*.js": [
      "eslint --ignore-path .gitignore",
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "snyk": true
}
